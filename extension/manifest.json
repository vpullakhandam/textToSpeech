{
    "manifest_version": 3,
    "name": "TextToSpeech Extension",
    "version": "1.0",
    "description": "Convert text to speech with this extension.",
    "permissions": ["tts"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  